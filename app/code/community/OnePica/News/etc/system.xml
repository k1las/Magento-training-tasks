<?xml version="1.0" ?>
<config>
    <tabs>
        <onepicaconfig translate="label" module="onepica_news">
            <label>OnePica</label>
            <sort_order>10</sort_order>
        </onepicaconfig>
    </tabs>
    <sections>
        <news_options translate="label" module="onepica_news">
            <label>News</label>
            <tab>onepicaconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <news_show_for_customer>
                            <label>Show news for customer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>onepica_news/YesNo</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </news_show_for_customer>
                        <news_per_page>
                            <label>News per page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </news_per_page>
                        <latest_news_block_show>
                            <label>Show latest news block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>onepica_news/YesNo</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </latest_news_block_show>
                        <news_count_in_block>
                            <label>News in block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </news_count_in_block>
                    </fields>
                </messages>
            </groups>
        </news_options>
    </sections>
</config>
