<?xml version="1.0" ?>
<config>
    <tabs>
        <onepicaconfig translate="label" module="comments">
            <label>OnePica</label>
            <sort_order>10</sort_order>
        </onepicaconfig>
    </tabs>
    <sections>
        <comments_options translate="label" module="comments">
            <label>Comments</label>
            <tab>onepicaconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_comments>
                            <label>Enable comments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>comments/Options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_comments>
                        <login_required>
                            <label>Login Required to Comment</label>
                            <frontend_type>select</frontend_type>
                            <source_model>comments/Options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </login_required>
                        <comments_per_page>
                            <label>Comments per page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </comments_per_page>
                        <auto_approve>
                            <label>Auto approve comments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>comments/Options</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_approve>
                    </fields>
                </messages>
            </groups>
        </comments_options>
    </sections>
</config>
