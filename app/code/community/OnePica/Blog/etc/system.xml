<?xml version="1.0" ?>
<config>
    <tabs>
        <onepicaconfig translate="label" module="onepica_blog">
            <label>OnePica</label>
            <sort_order>10</sort_order>
        </onepicaconfig>
    </tabs>
    <sections>
        <blog_options translate="label" module="onepica_blog">
            <label>Blog</label>
            <tab>onepicaconfig</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <messages translate="label">
                    <label>Config</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <posts_show_for_customer>
                            <label>Show posts for customer</label>
                            <frontend_type>select</frontend_type>
                            <source_model>onepica_blog/YesNo</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </posts_show_for_customer>
                        <posts_per_page>
                            <label>Posts per page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </posts_per_page>
                        <latest_posts_block_show>
                            <label>Show latest posts block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>onepica_blog/YesNo</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </latest_posts_block_show>
                        <posts_count_in_block>
                            <label>Posts in block</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </posts_count_in_block>
                    </fields>
                </messages>
            </groups>
        </blog_options>
    </sections>
</config>
